<Page x:Class="Components.View.Pages.ControlPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Components.View.Pages"
      xmlns:vm ="clr-namespace:Components.ViewModel"
      d:DataContext="{d:DesignInstance vm:CommandPageViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ControlPage">

    <Grid Background="BurlyWood">
        <StackPanel Margin="10">
            <Button Content="0D component"
                    Command="{Binding ZeroDCommand}"
                    Margin="5"/>
            <Button Content="1D component"
                    Command="{Binding OneDCommand}"
                    Margin="5"/>
            <Button Content="3D component"
                    Command="{Binding ThreeDCommand}"
                    Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
