<UserControl x:Class="ScallingLaws_example.View.UserControls.ScalingLawUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScallingLaws_example.View.UserControls"
             xmlns:controls="clr-namespace:WpfMath.Controls;assembly=WpfMath"
             xmlns:vm="clr-namespace:ScallingLaws_example.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
 
    <UserControl.Resources>
        <vm:ScalingLawsViewModel x:Key="vm"/>
    </UserControl.Resources>
    
    <Grid VerticalAlignment="center"
          Margin="5"
          DataContext="{StaticResource vm}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding ScalingLaws.Title}" 
                   VerticalAlignment="Center"
                   Grid.Column="0"/>
        <controls:FormulaControl Formula="\left(x^2+2 \cdot x + 2\right) = 0"
                                 Grid.Column="1"/>
    </Grid>
</UserControl>
